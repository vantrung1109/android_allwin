<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/application_font</item>
        <item name="android:fontFamily">@font/application_font</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomLoadingDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="fontFamily">@font/application_font</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/application_font</item>
    </style>

    <style name="AppTextTitle">
        <item name="fontFamily"> @font/roboto_bold </item>
        <item name="android:fontFamily"> @font/roboto_bold</item>
        <item name="android:textColor">@color/black_full</item>
        <item name="android:textSize">@dimen/_30ssp</item>
    </style>

    <style name="AppTvTitleForEditText">
        <item name="fontFamily"> @font/roboto_medium </item>
        <item name="android:fontFamily"> @font/roboto_medium</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
    </style>

    <style name="AppEditTextInfo">
        <item name="fontFamily"> @font/roboto_medium </item>
        <item name="android:fontFamily"> @font/roboto_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_7sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/edit_txt_custom</item>
    </style>

    <style name="AppButtonCustom">
        <item name="fontFamily"> @font/roboto_bold </item>
        <item name="android:fontFamily"> @font/roboto_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:paddingStart">@dimen/_7sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/edit_txt_custom</item>
    </style>
    <style name="AppCommonText">
        <item name="fontFamily"> @font/roboto_medium </item>
        <item name="android:fontFamily"> @font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>