<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="com.base.mvvm.ui.signin.SignInViewModel" />

        <variable name="a"
            type="com.base.mvvm.ui.signin.SignInActivity" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Đăng nhập"
            android:textColor="@color/black"
            android:textSize="@dimen/_30sdp"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_below="@+id/tv_title"
            android:text="Số điện thoại"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_below="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_33sdp"
            android:hint="Nhập số điện thoại"
            android:paddingStart="@dimen/_7sdp"
            android:background="@drawable/edit_txt_custom"
            android:textSize="@dimen/_12ssp"
            android:singleLine="true"
            android:text="@={vm.phone}"
            android:focusable="true"
            android:fontFamily="@font/roboto_medium"
            android:clickable="true"
            android:inputType="number"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_phone"
            android:text="Email"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/edit_password"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_below="@+id/tv_email"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_33sdp"
            android:hint="Nhập mật khẩu"
            android:textSize="@dimen/_12ssp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:paddingLeft="@dimen/_7sdp"
            android:background="@drawable/edit_txt_custom"
            android:text="@={vm.password}"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"

            />


        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_password"
            android:text="Quên mật khẩu"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_below="@+id/tv_forgot_password"
            android:background="@drawable/btn_custom_enable"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Đăng nhập"
            android:gravity="center"
            android:textSize="@dimen/_15ssp"
            android:textColor="#FFFFFF"
            android:clickable="true"
            android:id="@+id/loginButtonLogin"
            android:onClick="@{(v)-> vm.doLogin()}"
            android:fontFamily="@font/roboto_bold"
            android:textStyle="bold"

            />
    </RelativeLayout>

</layout>