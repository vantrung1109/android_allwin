<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_account_profile"
        android:layout_gravity="bottom"

        >
    <RelativeLayout
        android:id="@+id/layout_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"

        >
        <RelativeLayout
            android:id="@+id/layout_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            >
            <ImageView
                android:id="@+id/img_cash"
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/cash"

                />
            <TextView
                android:id="@+id/tv_cash"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:text="Tiền mặt"
                android:layout_toEndOf="@+id/img_cash"
                android:layout_marginStart="@dimen/_5sdp"
                style="@style/AppCommonText"
                android:textSize="@dimen/_11ssp"

                />
            <View
                android:id="@+id/tv_dash_portrait"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_toEndOf="@+id/tv_cash"
                android:layout_marginStart="@dimen/_20sdp"
                style="@style/AppCommonText"
                android:textSize="@dimen/_11ssp"
                android:background="@color/brown_edit_txt_non_focus"
                />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_discount"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="Ưu đãi"
            style="@style/AppCommonText"
            android:textSize="@dimen/_11ssp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toEndOf="@+id/layout_cash"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_discount"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            >
            <View
                android:id="@+id/tv_dash_portrait_2"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_15sdp"

                android:layout_marginEnd="@dimen/_20sdp"
                style="@style/AppCommonText"
                android:textSize="@dimen/_11ssp"
                android:background="@color/brown_edit_txt_non_focus"

                />
            <TextView
                android:id="@+id/tv_note"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:text="Ghi chú"
                style="@style/AppCommonText"
                android:textSize="@dimen/_11ssp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toEndOf="@id/tv_dash_portrait_2"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>


    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/layout_note"
        android:background="@drawable/btn_custom_enable"
        android:enabled="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Đặt Winbike"
        android:gravity="center"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/white"
        android:clickable="true"
        android:id="@+id/btn_order"
        android:fontFamily="@font/roboto_bold"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        />
</RelativeLayout>
</RelativeLayout>