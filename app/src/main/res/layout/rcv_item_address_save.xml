<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_item_address_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp">
        <ImageView
            android:id="@+id/img_item_address_save"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/address_save_default_img"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"

            />
        <TextView
            android:id="@+id/tv_pickup_address_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masteri Thảo Điền"

            android:layout_toEndOf="@+id/img_item_address_save"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="@dimen/_7sdp"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_destination_dress_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thảo Điền, Thủ Đức, Hồ Chí Minh"
            android:layout_toEndOf="@+id/img_item_address_save"
            android:layout_below="@id/tv_pickup_address_item"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginStart="@dimen/_7sdp"
            android:textColor="#898A8D"
            android:layout_marginTop="@dimen/_5sdp"
            android:textStyle="bold"
            />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#C0C0C0"
        android:layout_below="@id/layout_item_address_save"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        />

</RelativeLayout>