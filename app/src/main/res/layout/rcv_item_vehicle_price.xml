<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="ivm"
            type="com.base.mvvm.data.model.api.response.service.ServiceResponse" />
    </data>


    <RelativeLayout
        android:id="@+id/layout_rcv_vehicle_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:background="@drawable/background_vehicle_order"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <ImageView
            android:id="@+id/img_vehicle"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_32sdp"
            android:src="@drawable/motorbike"
            />
        <TextView
            android:id="@+id/tv_name_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_vehicle"
            android:text="Winbike"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="50.000"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerVertical="true"

            />

        <TextView
            android:id="@+id/tv_promotion_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="20000"
            android:visibility="gone"
            />
    </RelativeLayout>


</layout>